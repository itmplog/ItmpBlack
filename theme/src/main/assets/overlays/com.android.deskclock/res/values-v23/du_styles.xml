<?xml version="1.0" encoding="utf-8"?>
<!--You are editing DeskClock's DU Specific Styles-->

<resources>
    <style name="AmPmTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="CitiesTheme" parent="@android:style/Theme.Material">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:actionBarPopupTheme">@style/PopupMenu</item>
    </style>
    <style name="DeskClockParentTheme" parent="@android:style/Theme.Material">
        <item name="android:buttonStyle">?android:borderlessButtonStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
    </style>
    <style name="DialogTheme" parent="@style/TimePickerTheme" />
    <style name="DeskClockDropDownListView" parent="@android:style/Widget.Material.ListView.DropDown" />
    <style name="PopupMenu" parent="@android:style/Theme.Material" />
    <style name="TimeLabelTextAppearance" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">60.0sp</item>
    </style>
    <style name="SettingsTheme" parent="@android:style/Theme.Material.Settings">
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance.StatusBar" parent="@style/TextAppearance">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent" parent="@style/TextAppearance.StatusBar">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">@*common:color/theme_color_notification_secondary</item>
    </style>
    <style name="TextAppearance.StatusBar.EventContent.Title" parent="@style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">@dimen/notification_title_text_size</item>
        <item name="android:textColor">@*common:color/theme_color_notification_primary</item>
    </style>
    <style name="TimePickerTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>
    <style name="TimePickerStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerTimeTextAppearance">@style/TimeLabelTextAppearance</item>
        <item name="android:headerAmPmTextAppearance">@style/AmPmTextAppearance</item>
    </style>
</resources>