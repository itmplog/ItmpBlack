<?xml version="1.0" encoding="utf-8"?>
<!--You are editing Mms' Styles-->

<resources>
    <style name="MmsTheme" parent="@android:style/Theme.Material">
        <item name="android:colorAccent">@color/mms_theme_color_accent</item>
		<item name="android:colorPrimary">@*common:color/ab</item>
        <item name="android:colorPrimaryDark">@*common:color/sb</item>
		<item name="android:statusBarColor">@*common:color/sb</item>
		<item name="android:colorEdgeEffect">@*common:color/midnight_white</item>
		<item name="android:actionBarStyle">@style/Theme.ActionBar</item>
	</style>
	<style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar">
		<item name="android:background">@*common:drawable/settings_header</item>
    </style>
    <style name="HeaderSpinnerDropDown" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="HeaderTheme" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:colorBackground">@*common:color/midnight_primary</item>
        <item name="android:spinnerDropDownItemStyle">@style/HeaderSpinnerDropDown</item>
        <item name="android:colorAccent">?android:textColorPrimary</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material</item>
    </style>
</resources>
