        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:colorPrimary">@*common:color/sb</item>
        <item name="android:colorPrimaryDark">@*common:color/sb</item>
        <item name="android:colorAccent">@*common:color/midnight_theme</item>
	</style>
	<style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar">
		<item name="android:background">@*common:drawable/settings_header</item>
    </style>
	<!-- About phone and Status windows, do not remove SubSettingsDialogWhenLarge as parent has been changed-->
		<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" >
		<item name="android:actionBarStyle">@style/Theme.ActionBar</item>		
    </style>
		<style name="Theme.DialogWhenLarge" parent="@style/Theme.SettingsBase">
			<item name="android:statusBarColor">@*common:color/midnight_primary</item>
		</style>
	<style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
		<item name="android:colorPrimary">@*common:color/sb</item>
		<item name="android:colorPrimaryDark">@*common:color/sb</item>
		<item name="android:colorAccent">@*common:color/midnight_theme</item>
		<item name="android:actionBarStyle">@style/Theme.ActionBar</item>		
    </style>

    <style name="Theme.DateTimeSettingsSetupWizard" parent="@android:style/Theme.Material.NoActionBar" />
    <style name="Theme.SettingsLicenseActivity" parent="@android:style/Theme.Material.Panel" />
    <style name="Theme.AppPicker" parent="@android:style/Theme.Material.Dialog" />
    <style name="Theme.SettingsDialog" parent="@android:style/Theme.Material.Dialog.NoActionBar" />
    <style name="Theme.SettingsAlertDialog" parent="@*android:style/Theme.Material.Dialog.Alert" />

