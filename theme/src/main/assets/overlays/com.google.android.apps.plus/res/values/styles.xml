    <style name="Theme.EmeraldSea.Dialog" parent="@*common:style/Theme.AppCompat.Dialog" >
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textColorPrimary">@*common:color/midnight_white</item>
		<item name="android:textColorSecondary">@*common:color/midnight_text</item>
    </style>
    <style name="Theme.EmeraldSea.Preference.Dialog" parent="@*common:style/Theme.AppCompat.Dialog" >
