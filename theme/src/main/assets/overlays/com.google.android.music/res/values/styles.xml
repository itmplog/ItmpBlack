<?xml version="1.0" encoding="utf-8"?>
<!--You are editing Play Music's Styles-->

<resources>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Platform.AppCompat.Light.Dialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="PlayDrawerList">
		<item name="android:layout_gravity">start</item>
        <item name="android:background">@color/play_main_background</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:layout_width">320.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:cacheColorHint">@color/play_main_background</item>
        <item name="android:divider">@null</item>
        <item name="android:choiceMode">none</item>
	</style>
    <style name="Upsell" />
    <style name="Upsell.Button" parent="@style/Upsell">
        <item name="android:textSize">@dimen/sign_up_button_text_size</item>
    </style>
    <style name="Upsell.Button.TeaserButton" parent="@style/Upsell.Button">
        <item name="android:textSize">@dimen/upsell_teaser_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:drawableRight">@drawable/ic_navigate_next_white</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>